  <div class="container">
    <div class="row">
      <h1 class="mx-auto pt-3 pb-1"><%= @customer.name %>さんとのチャット</h1>
    </div>
  <table class="message table">
    <thead>
      <tr>
        <th style="text-align: left; font-size: 20px;"><%= current_customer.name %></th>
        <th style="text-align: right; font-size: 20px;"><%= @customer.name %></th>
      </tr>
    </thead>
    <% @chats.each do |chat| %>
      <% if chat.customer_id == current_customer.id %>
        <tbody>
          <tr>
            <div class="col-5">
              <th>
                <p style="text-align: left;"><%= chat.message %></p>
              </th>
            </div>
            <th></th>
          </tr>
      <% else %>
          <tr>
            <th></th>
            <div class="col-5">
              <th>
                <p style="text-align: right;"><%= chat.message %></p>
              </th>
            </div>
          </tr>
        </tbody>
      <% end %>
    <% end %>
  </table>
  <%= form_with model: @chat, remote: true do |f| %>
    <%= f.text_area :message %>
    <%= f.hidden_field :room_id %><br>
    <button class="btn btn-primary" type="submit">メッセージを送信する</button>
  <% end %>
</div>