<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @contact do |f| %>
        <div class="form-group">
          <%= f.label :お名前 %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :電話番号 %>
          <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :お問い合わせ内容 %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
        <div>
          <%= f.submit '入力内容確認' %>
        </div>
      <% end %>
    </div>
  </div>
</div>