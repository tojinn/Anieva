<div class="container">
  <div class="row">
    <h1 class="mx-auto pt-3 pb-1">アニメ一覧</h1>
  </div>

  </ul>
　<div class="container">
    <%= form_with model: Anime.new, method: :get, class: "search__form" do |f| %>
      <div class="input-group">
        <%= f.text_field :keyword, required: true, class: " search__form__input form-control", id: "form-1" %>
        <span class="input-group-btn">
          <button class="btn btn-primary"  id="btn1" type="submit">
           <i class="fas fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
    <%= form_with model: Anime.new, method: :get, class: "mt-3" do |f| %>
     <%= f.select :season, {'2021年春': "2021-spring", '2021年夏': "2021-summer", '2021年秋': "2021-autumn", '2021年冬': "2021-winter", '2020年春': "2020-spring", '2020年夏': "2020-summer", '2020年秋': "2020-autumn", '2020年冬': "2020-winter", '2019年春': "2019-spring", '2019年夏': "2019-summer", '2019年秋': "2019-autumn", '2019年冬': "2019-winter",}, include_blank: "選択して下さい", class: "form-control" %>
     <button class="btn btn-primary"  id="btn2" type="submit">検索する</button>
    <% end %>
    <div class='col-6 mx-auto mb-4'>
      <div id="index">
       <%= render "animes/index", animes: @animes %>
      </div>
    </div>
  </div>
</div>
