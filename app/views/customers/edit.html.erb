<div class='container'>
  <div class='row'>
    <h1 class="mx-auto pt-5 pb-4">マイページ編集</h1>
  </div>
  <div class="col-8 mx-auto mb-4">
    <div class="card ">
      <div class="card-body login-card-body">
      <%= form_with model:@customer, local:true do |f| %>
        <div class="form-group">
         <%= f.label :名前 %>
         <%= f.text_field :name, autofocus: true, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :画像 %><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          <%= attachment_image_tag @customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        </div>
        <div>
         <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
         <%#= link_to '退会する', unsubscribe_customers_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
        </div>
      <% end %>
    </div>
  </div>
</div>